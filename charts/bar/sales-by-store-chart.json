{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with data loaded from a url.",
  "data": {"url": "data/sales_by_store.json"},
  "mark": {
    "type": "bar",
    "color": {
      "gradient": "linear",
      "stops": [
        {
          "offset": 0,
          "color": "white"
        },
        {
          "offset": 1,
          "color": "darkgreen"
        }
      ],
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0
    },
    "cornerRadius": 0,
    "cornerRadiusEnd": 10,
    "width": 20
  },
  "encoding": {
    "x": {"field": "store", "type": "ordinal",  "axis": {"labelAngle": 0}},
    "y": {"field": "sales", "type": "quantitative"}
  },

  "width": "500",
  "height": "125"
}
